{{#ember-wormhole to="mobile-single-wormhole"}}
  {{#mobile/full-screen
    model=model
    activities=activities
    title=(concat (t "ticket.label.numberSymbol")model.number)
    close=(route-action "closeMobileDetail")
    redirectRoute="tickets.index"
    hashComponents=hashComponents
    otherXhrs=otherXhrs
    repository=repository
  }}
    <!-- mobile=true adds meta data for ticket-single component class -->
    {{tickets/ticket-single
      model=model
      mobile=true
    }}
  {{/mobile/full-screen}}
{{/ember-wormhole}}

{{base-component
  model=model
  save="save"
  cancel="cancel"
  delete=delete
}}

<section class="docSection container-fluid">
  <div class="row">
    <div class="col-md-12">
      <section style="padding-bottom: 0">
        <div class="row card-title">
          <h1 class="col-md-12 t-assignment-header">
            <span class="new">
            {{#if model.new}}
              {{t "assignment.new"}}
            {{else}}
              {{t "assignment.detail"}}
            {{/if}}
            </span>
          </h1>
        </div>
      </section>
    </div>
    <div class="col-md-12">
      <section>
        {{assignments/detail-section model=model didValidate=didValidate}}
        {{assignments/filter-section model=model didValidate=didValidate id="pf"}}
      </section>
    </div>
  </div>
</section>

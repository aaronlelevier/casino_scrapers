<div class="container-fluid">
  <div class="row">
    <h2 class="col-md-12">{{t 'admin.dtd.preview'}}</h2>
  </div>
  <div class="row">
    <header class="col-md-12">
      {{#each ticket.dt_path as |path_object|}}
        <ol class="breadcrumb t-dt-breadcrumb">
          <li>{{#link-to "dt.dt" path_object.dtd.id ticket.id class="t-ticket-breadcrumb-back"}}{{dt-breadcrumb-text path_object.dtd}}{{/link-to}}</li>
        </ol>
      {{/each}}
    </header>
  </div>
  <div class="row">
    <div class="dtd-live">
      <div class="dtd-live-inner panel panel-default">
        {{#if model.note}}
        <div class="t-dtd-preview-note-header panel-header">
          <div class="alert {{alert-class translated=(t model.note_type)}} {{t model.note_type}} t-dtd-preview-note">{{format-markdown model.note}}</div>
        </div>
        {{/if}}
        <div class="panel-body">
          {{#if model.description}} <p class="t-dtd-preview-description">{{format-markdown model.description}}</p> {{/if}}
          <div class="dtd-attachments">
            {{#each model.attachments as |attachment|}}
              <span class="t-dtd-preview-attachment">
                {{attachment/single-medium attachment=attachment}}
              </span>
            {{/each}}
          </div>
          {{#if model.fields}}
            {{#each model.fields as |field|}}
              <div class="t-dtd-preview-field">
                {{dtds/field-element-display field=field ticket=ticket}}
              </div>
            {{/each}}
          {{/if}}
        </div>
        {{#if model.prompt}} <div class="panel-footer t-dtd-preview-prompt">{{format-markdown model.prompt}}</div> {{/if}}
        {{#if (is-equal model.link_type model.link_types.[1])}}
        <div class="list-group dtd-links dtd-list t-dtd-preview-links">
          {{#each model.links as |link|}}
          {{#if link.is_header}}
          <a class="list-group-item dtd-link-header t-dtd-preview-link-header">
            <h4 class="list-group-item-heading">{{link.text}}</h4>
          </a>
          {{else}}
          <button type="button" class="list-group-item t-dtd-preview-btn">{{link.text}}</button>
          {{/if}}
          {{/each}}
        </div>
        {{/if}}
      </div>
      {{#if (is-equal model.link_type model.link_types.[0])}}
      <div class="text-center dtd-links dtd-buttons t-dtd-preview-links">
        {{#each model.links as |link|}}
        <button type="button" disabled={{fieldsCompleted}} class="btn t-dtd-preview-btn {{if link.action_button 'btn-primary' 'btn-default'}}" {{action "linkClick" link ticket model}}>{{link.text}}</button>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>

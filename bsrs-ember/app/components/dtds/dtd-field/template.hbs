{{#each model.fields as |field|}}
  <div class="input-group-vertical">
    <div class="input-group">
      <span class="input-group-btn">
        <button class="t-del-field-btn btn btn-default btn-sm delete" type="button" {{action 'delete' field}}>{{fa-icon "minus"}}</button>
      </span>
      {{input type="text" placeholder=(t "admin.dtd.label.label") value=field.label class="form-control t-dtd-field-label"}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">{{t "admin.dtd.label.field_type"}}</span>
      {{#power-select
        class='t-dtd-field-type'
        selected=field.type
        onchange=(action "setFieldType" field.id)
        searchEnabled=false
        options=field.types
        as |field|
      }}
        {{t field}}
      {{/power-select}}
    </div>
    {{#if (if-in elem=field.type list=field.typesWithOptions)}}
      {{dtds/dtd-field-option
        model=field
      }}
    {{/if}}
    <div class="input-group">
      <span class="input-group-addon">{{t "admin.dtd.label.required"}}</span>
      <div class="checkbox">
        <label>
          {{input type="checkbox" checked=field.required class="form-control t-dtd-field-required"}}
          <span></span>
        </label>
      </div>
    </div>

  </div>
{{/each}}
<button class="t-add-field-btn btn-add btn btn-default btn-sm" type="button" {{action "append"}}>
  <span class="btn-label">{{fa-icon "plus"}} {{t "admin.dtd.field.add"}}</span>
</button>

{{#form-group title=(if categories_selected.label categories_selected.label (t "admin.category.other")) noTranslate=true for="categories"}}
  {{#power-select
    selected=categories_selected
    options=options
    class="category-select t-model-category-select"
    tagName="div"
    onchange=(action "selected")
    onopen=(action "handleOpen")
    searchEnabled=false
    allowClear=allowClear
    as |category|
  }}
    {{category.name}}
  {{/power-select}}
{{/form-group}}

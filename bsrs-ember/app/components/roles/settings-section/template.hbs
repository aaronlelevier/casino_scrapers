{{card-title title="admin.role.label.settings"}}
{{#card-section}}
  <div class="row">
    <div class="col-md-12">
      {{#form-group title="admin.person.label.auth_amount" for="auth_amount"}}
      {{input-currency
        model=model
        valuePath="auth_amount"
        field="auth_amount"
        currencyField="auth_currency"
      }}
      {{/form-group}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{#form-group title="admin.setting.dashboard_text" for="dashboard_text"}}
        <p class="inherited-msg t-inherited-msg-dashboard_text">
          {{#link-to "admin.tenants.tenant" model.inherited.dashboard_text.inherits_from_id class="t-inherited-msg-dashboard_text-link"}}
            {{t 'crud.inherited_from' from="general"}}
          {{/link-to}}
        </p>
        {{textarea
          autoresize=true
          placeholder=(t 'crud.default_value' value=otherXhrs.[0].settings.dashboard_text)
          value=model.dashboard_text
          class="form-control t-settings-dashboard_text"
          id="dashboard_text"
        }}
      {{/form-group}}
    </div>
  </div>
{{/card-section}}

{{card-title title="admin.role.label.permissions"}}
{{#card-section}}
  <div class="row">
    <div class="col-md-12">
      {{roles/permissions-section model=model}}
    </div>
  </div>
{{/card-section}}

<form {{action "return false" this on="submit"}}>
  <header>
    <div class="btn-group btn-group-sm pull-right center-block" style="z-index: 2">
      {{button-generic save="saveRole" type="save"}}
      {{button-generic cancel="cancelRole" type="cancel"}}
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#">{{fa-icon "files-o"}} Duplicate</a></li>
        <li><a href="#">{{fa-icon "print"}} Print</a></li>
        <li>{{delete-button delete="deleterole"}}</li>
      </ul>
    </div>
  </header>
  <section class="docSection container-fluid">
    <section>
      <h2 class="col-sm-12">{{t "admin.role.label.general"}}</h2>
      <div class="col-sm-12">
        {{#form-group title="admin.role.label.name" for="name"}}
            {{input type="text" value=model.name placeholder=(t "admin.role.label.name") class="form-control t-role-name" id="name" required="required"}}
            {{#validation-error-field submitted=submitted field="name" className="validation validation-under t-name-validation-error" model=model validation=nameValidation}}{{t "validation.invalid"}} {{t "admin.role.label.name"}}{{/validation-error-field}}
        {{/form-group}}
      </div>
      <div class="col-sm-12">
        {{#form-group title="admin.role.label.role_type" for="role_type_select"}}
            <select class="t-role-type form-control role-type" onchange={{action (action "changed" model) value="target.value"}} id="role_type_select">
              {{#each all_role_types as |role_type|}}
              <option value={{role_type.name}} selected={{is-equal model.role_type role_type.name}}>{{role_type.name}}</option>
              {{/each}}
            </select>
        {{/form-group}}
    </div>
      <div class="col-sm-12">
        {{#form-group title="admin.location.label.location_level" for="role_location_level_select"}}
          {{location-level-select model=model.location_level location=model options=all_location_levels modelName="roles"}}
        {{/form-group}}
    </div>
    </section>
  </section>
</form>

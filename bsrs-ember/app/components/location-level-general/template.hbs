{{base-component
  model=model
  save="save"
  cancel="cancel"
  delete=delete
  btnDisabled=saveTask.isRunning
}}

<section class="docSection container-fluid">
  <div class="row">
    <div class="col-md-12">
      <section style="padding-bottom: 0">
        <div class="row card-title">
          <h1 class="col-md-12">
            {{#if model.name}}
            {{model.name}}
            {{else}}
            <span class="new">{{t 'admin.locationlevel.new'}}</span>
            {{/if}}
          </h1>
        </div>
      </section>
    </div>
    <div class="col-md-12">
      <section>
        <div class="row">
          <div class="col-md-12">
            {{#form-group title="admin.locationlevel.label.name" for="name"}}
              {{validated-input
                model=model
                valuePath="name"
                didValidate=didValidate
                className="form-control t-location-level-name"
                placeholder=(t "admin.locationlevel.label.name")
                class="t-location-level-name-validator"
              }}
            {{/form-group}}
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            {{#form-group title="admin.locationlevel.label.childOrg"}}
            {{location-level-children-power-select
              model=model
              options=location_level_options
              setChild=setChild
            }}
            {{/form-group}}
          </div>
        </div>
      </section>
    </div>
  </div>
</section>

<div class="bs-mobile">
  {{input type="checkbox" checked=drawerOpen id="nav-trigger" class="nav-trigger t-nav-trigger"}}
  <label for="nav-trigger">{{fa-icon "reorder"}}</label>
  <nav class="navigation">
    <ul>
      <li class="nav-search"><input type="search"></li>
      <li class="nav-section">
        <ul class="nav-section-inner">
          <li class="nav-item">{{#link-to "dashboard"}}{{t "modules.tickets.newTickets"}}{{/link-to}}</li>
          <li class="nav-item">{{#link-to "dashboard"}}{{t "modules.tickets.openTickets"}}{{/link-to}}</li>
          <li class="nav-item">{{#link-to "dashboard"}}{{t "modules.workOrders.overdue"}}{{/link-to}}</li>
          <li class="nav-item">{{#link-to "dashboard"}}{{t "admin.approval.other"}}{{/link-to}}</li>
          <li class="nav-item">{{#link-to "dashboard"}}Delayed{{/link-to}}</li>
        </ul>
      </li>

      <li class="nav-section">
        <ul class="nav-section-inner">
          <li class="nav-item" {{action "closeDrawer"}}>{{#link-to "tickets.index"}}{{t "modules.tickets.titleShort"}}{{/link-to}}</li>
          <li class="nav-item">{{#link-to "dashboard"}}{{t "modules.workOrders.titleShort"}}{{/link-to}}</li>
          <li class="nav-item">{{#link-to "dashboard"}}{{t "modules.invoices.titleShort"}}{{/link-to}}</li>
        </ul>
      </li>
      <li class="nav-section">
        <ul class="nav-section-inner">
          <li class="nav-item">{{#link-to "dashboard"}}{{t "admin.title"}}{{/link-to}}</li>
        </ul>
      </li>
    </ul>
    {{people/person-current}}
  </nav>
  <vbox class="mobile-wrap">
    <header class="mobile-header">
      {{nav-bar}}
    </header>
    {{tab-list tabs=tabs closeTabMaster=(action "closeTabMaster")}}
    <section class="mobile-main">
      {{liquid-outlet}}
    </section>
    {{mobile-footer}}
  </vbox>
</div>

{{base-component
  model=model
  save="save"
  cancel="cancel"
  delete=delete
  btnDisabled=saveTask.isRunning
  noun="automation"
  permissions=permissions
}}

<section class="docSection container-fluid">
  <div class="row">
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <h1 class="col-md-12 t-automation-header">
            {{#if model.new}}
              <span class="new">{{t "admin.automation.new"}}</span>
            {{else}}
              {{#if model.description}}
                {{model.description}}
              {{else}}
                <span class="new">{{t "admin.automation.detail"}}</span>
              {{/if}}
            {{/if}}
          </h1>
        </div>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <section>
        {{automations/detail-section model=model}}
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <h2 class="col-md-12">{{t "admin.automation.criteria"}}</h2>
        </div>
      </section>
    </div>
    <div class="col-md-12">
      <section>
        {{automations/filter-section model=model id="pf"}}
      </section>
    </div>
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <h2 class="col-md-12">{{t "admin.automation.actions"}}</h2>
        </div>
      </section>
    </div>
    <div class="col-md-12">
      <section>
        {{automations/action-section model=model id="action"}}
      </section>
    </div>
  </div>
</section>

<div class="row">
  <div class="col-md-12">
    <section>
      <div class="row">
        <div class="col-md-4">
          {{#form-group title="admin.person.label.status" for="status"}}
          {{power-select-foreign-key
            model=model 
            selected=model.status 
            change_method="change_status" 
            relatedModelName="status"
            componentArg="tickets/ticket-status-tag"
          }}
          {{/form-group}}
        </div>
        <div class="col-md-4">
          {{#form-group title="admin.person.label.username" for="username"}}
          {{input-backend-validation 
            model=model 
            value=model.username 
            valuePath="username" 
            placeholder=(t "admin.person.label.username") 
            className="t-person-username" 
            idZ="username"
          }}
          {{/form-group}}
        </div>
        <div class="col-md-4">
          {{#form-group title="admin.person.label.password" for="password"}}
          {{#if changingPassword}}
          {{input-focus 
            type="password" 
            placeholder=(t "admin.person.label.password") 
            value=model.password 
            class="form-control t-person-password" 
            id="password"
          }}
          <div class="checkbox">
            {{checkbox-component 
              checked=model.password_one_time 
              inputClass="t-person-password_one_time" 
              labelClass="t-person-password_one_time-label" 
              checkboxText=(t "admin.setting.password_one_time") 
            }}
          </div>
          <div><button class="btn btn-default btn-sm" {{action "changePassword"}}>{{fa-icon "ban"}} {{t "crud.cancel.button"}}</button></div>
          {{else}}
          <div><button class="btn btn-default btn-sm t-person-change-password" {{action "changePassword"}}>{{fa-icon "key"}} {{t "admin.person.label.change_password"}}</button></div>
          {{/if}}
          {{/form-group}}

        </div>
      </div>
    </section>
  </div>
</div>

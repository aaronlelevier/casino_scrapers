{{base-component
  model=model
  save="save"
  cancel="cancel"
  delete=delete
  btnDisabled=saveTask.isRunning
}}

<section class="docSection container-fluid">
  <div class="row">
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <div class="col-md-12">
            {{form-photo 
              icon="user" 
              model=model 
              onError=onError
            }}
            <h1 class="t-person-single-header">
              {{#if (or model.first_name model.middle_initial model.last_name)}}
                {{model.first_name}} {{model.middle_initial}} {{model.last_name}}
              {{else}}
                {{model.username}}
              {{/if}}
            </h1>
            <p class="t-person-single-sub-header">{{model.role.name}}</p>
          </div>
        </div>
      </section>
    </div>
  </div>
  {{people/detail-section
    model=model
    role_change=role_change
    didValidate=didValidate
  }}
  <div class="row">
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <h2 class="col-md-12">{{t "admin.person.label.credentials"}}</h2>
        </div>
      </section>
    </div>
  </div>
  {{people/credentials-section
    model=model
    statuses=statuses
    changeBool=(action "changeBool")
    didValidate=didValidate
  }}
  <div class="row">
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <h2 class="col-md-12">{{t "admin.person.label.contact"}}</h2>
        </div>
      </section>
    </div>
  </div>
  {{people/contact-section
    model=model
    didValidate=didValidate
  }}
  <div class="row">
    <div class="col-md-12">
      <section class="card-title">
        <div class="row">
          <h2 class="col-md-12">{{t "admin.person.label.settings"}}</h2>
        </div>
      </section>
    </div>
  </div>
</section>

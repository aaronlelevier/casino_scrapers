{{base-component
  model=model
  save="save"
  cancel="cancel"
  delete="delete"
}}

<section class="docSection container-fluid">
  <div class="row">
    <div class="col-md-12">
      <section style="padding-bottom: 0">
        <div class="row card-title">
          <h1 class="col-md-12 t-person-single-header">
            {{#if (or model.first_name model.middle_initial model.last_name)}}
              {{model.first_name}} {{model.middle_initial}} {{model.last_name}}
            {{else}}
              {{model.username}}
            {{/if}}
          </h1>
          <p class="col-md-12 t-person-single-sub-header">{{model.role.name}}</p>
        </div>
      </section>
    </div>
    {{mobile/person/detail-section
      model=model
      roles=roles
      role_change=role_change
      extra_params=extra_params
      locales=locales
      locationRepo=locationRepo
    }}
  </div>
  {{mobile/person/credentials-section
    model=model
    statuses=statuses
    changeBool=(action "changeBool")
  }}
  {{mobile/person/contact-section
    model=model
    phone_number_types=phone_number_types
    email_types=email_types
    default_phone_number_type=default_phone_number_type
    default_email_type=default_email_type
  }}
  {{mobile/person/settings-section
    model=model
    changeBool=(action "changeBool")
  }}
</section>

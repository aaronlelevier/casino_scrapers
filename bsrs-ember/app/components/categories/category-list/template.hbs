<header>
	<h1 class="t-categories">{{t "admin.category" count="2"}}</h1>

	<div class="btn-group btn-group-sm pull-right center-block">
    {{#link-to 'admin.categories.new' class="t-category-new add-btn btn btn-default"}}
      {{fa-icon "plus-circle"}} {{t 'button.add'}}
    {{/link-to}}
	</div>

</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head">
				<th></th>
				<th>{{t "admin.category.label.name"}} {{fa-icon "sort"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each model as |category|}}
				{{#link-to 'admin.categories.category' category.id tagName="tr" class="t-categories-data"}}
					<td><input type="checkbox" /></td>
					<td>{{category.name}}</td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

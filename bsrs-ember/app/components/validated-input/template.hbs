{{#unless textarea}}
  {{input
    maxlength=maxlength
    type=type
    placeholder=placeholder
    value=value
    class=(concat "form-control " className)
    id=(if count (concat valuePath count) valuePath)
    focus-out=(action "focusedOut")
    key-up=(action "keyedUp")
  }}
  {{#if showMessage}}
      {{#if (v-get model valuePath "message")}}
        {{#tether-dialog
          container-class="tether-dialog-reset"
          target=(concat "#" valuePath)
          hasOverlay=false
          attachment="bottom left"
          targetAttachment="top left"
          offset="5px 0"
        }}
        <div class="validated-input-error-dialog animated flipInX error {{concat "t-validation-" valuePath}}">
         {{t (v-get model valuePath "message")}}
        </div>
        {{/tether-dialog}}
      {{/if}}
  {{/if}}
{{else}}
  {{textarea
    autoresize=true
    placeholder=placeholder
    value=value
    class=(concat "form-control " className)
    id=valuePath
    focus-out="focusedOut"
    key-up="keyedUp"
  }}
  {{#if showMessage}}
      {{#if (v-get model valuePath "message")}}
        {{#tether-dialog
          container-class="tether-dialog-reset"
          target=(concat "#" valuePath)
          hasOverlay=false
          attachment="bottom left"
          targetAttachment="top left"
          offset="5px 0"
        }}
        <div class="validated-input-error-dialog animated flipInX">
         {{t (v-get model valuePath "message")}}
       </div>
        {{/tether-dialog}}
      {{/if}}
  {{/if}}
{{/unless}}

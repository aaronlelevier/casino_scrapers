{{#unless textarea}}
  {{input
    maxlength=maxlength
    type=type
    placeholder=placeholder
    value=value
    class=(concat "form-control " className)
    id=(if count (concat valuePath count) valuePath)
    focus-out=(action "focusedOut")
    key-up=(action "keyedUp")
  }}
  {{show-validation-message 
    model=model 
    valuePath=valuePath
    showMessage=showMessage
  }}
{{else}}
  {{textarea
    autoresize=true
    placeholder=placeholder
    value=value
    class=(concat "form-control " className)
    id=valuePath
    focus-out="focusedOut"
    key-up="keyedUp"
  }}
  {{show-validation-message 
    model=model 
    valuePath=valuePath
    showMessage=showMessage
  }}
{{/unless}}

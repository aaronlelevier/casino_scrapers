{{#unless textarea}}
  {{input
    maxlength=maxlength
    type=type
    placeholder=placeholder
    value=value
    class=(concat "form-control " className)
    id=(if (gt count -1) (concat valuePath count) valuePath)
    focus-out=(action "focusedOut")
    key-up=(action "keyedUp")
  }}
  {{show-validation-message 
    model=model 
    valuePath=valuePath
    showMessage=showMessage
    count=count
  }}
{{else}}
  {{textarea
    autoresize=true
    placeholder=placeholder
    value=value
    class=(concat "form-control " className)
    id=(if (gt count -1) (concat valuePath count) valuePath)
    focus-out=(action "focusedOut")
    key-up=(action "keyedUp")
  }}
  {{show-validation-message 
    model=model 
    valuePath=valuePath
    showMessage=showMessage
    count=count
  }}
{{/unless}}

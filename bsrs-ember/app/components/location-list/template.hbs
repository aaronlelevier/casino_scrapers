<header>
	<h1 class="t-location">{{t "admin.location" count="2"}}</h1>

	<div class="btn-group btn-group-sm pull-right center-block">
    {{#link-to 'admin.locations.new' class="t-location-new add-btn btn btn-default"}}
      {{fa-icon "plus-circle"}} {{t 'button.add'}}
    {{/link-to}}
	</div>

</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head">
				<th></th>
				<th>{{t "admin.location.label.name"}} {{fa-icon "sort"}}</th>
				<th>{{t "admin.location.label.number"}}</th>
				<th>{{t "admin.location.label.location_level"}}</th>
				<th>{{t "admin.location.label.status"}} {{fa-icon "sort"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each model as |location|}}
				{{#link-to 'admin.locations.location' location.id tagName="tr" class="t-location-data"}}
					<td><input type="checkbox" /></td>
					<td class="t-location-name">{{location.name}}</td>
					<td>{{location.number}}</td>
					<td></td>
					<td></td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

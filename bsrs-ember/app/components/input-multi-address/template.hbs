{{#each model as |address|}}
  <div class="input-group-vertical t-address-group">
    <div class="input-group" style="width: 100%">
      <span class="input-group-btn">
        <button class="t-del-btn btn btn-default btn-sm delete" type="button" {{action 'delete' address}}>{{fa-icon "minus"}}</button>
      </span>
      <select class="t-address-type form-control" onchange={{action (action "changeType" address) value="target.value"}}>
        {{#each address_types as |address_type|}}
          <option value={{address_type.id}} selected={{is-equal address.type address_type.id}}>{{t address_type.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-group">
      <span class="input-group-addon address-label">{{t "admin.address.address"}}</span>
      {{textarea value=address.address class="form-control t-address" placeholder=(t "admin.address.address")}}
    </div>
    <div class="input-group">
      <span class="input-group-addon address-label">{{t "admin.address.city"}}</span>
      {{input type="text" value=address.city class="form-control t-address-city" placeholder=(t "admin.address.city")}}
    </div>
    <div class="input-group">
      <span class="input-group-addon address-label">{{t "admin.address.state"}}</span>
      <select class="form-control t-address-state" onchange={{action (action "changeState" address) value="target.value"}}>
        {{#each state_list as |state_single|}}
          <option value={{state_single.id}} selected={{is-equal address.state.id state_single.id}}>{{state_single.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-group">
      <span class="input-group-addon address-label">{{t "admin.address.postal_code"}}</span>
      {{input type="text" value=address.postal_code class="form-control t-address-postal-code" placeholder=(t "admin.address.postal_code")}}
    </div>
    <div class="input-group">
      <span class="input-group-addon address-label">{{t "admin.address.country"}}</span>
      <select class="form-control t-address-country">
        <option>United States</option>
      </select>
    </div>
  </div>

{{/each}}
<button class="t-add-btn add-btn btn btn-default btn-sm" type="button" {{action 'append'}}><span class="btn-label">{{fa-icon "plus"}}</span></button>

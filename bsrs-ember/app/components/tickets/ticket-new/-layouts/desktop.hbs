<aside class="side-panel">
  <header>
    <h1></h1>
  </header>
  <menu class="t-side-menu">
    {{tickets/ticket-new/side-section
      model=model
      personRepo=personRepo
      priorities=priorities
      statuses=statuses
    }}
  </menu>
</aside>


<article class="main">
  <div class="form">
    {{base-component
      model=model
      save="save"
      cancel="cancel"
    }}

    <section class="docSection container-fluid">

      {{#card-title}}
        <h1 class="col-md-12">
        {{#unless model.top_level_category.name}}
          <span class="new">{{t "ticket.new"}}</span>
        {{else}}
          {{model.top_level_category.name}}
        {{/unless}}
        </h1>
      {{/card-title}}

      {{tickets/ticket-new/detail-section
        model=model
        locationRepo=locationRepo
        submitted=submitted
      }}
    </section>
  </div>
</article>

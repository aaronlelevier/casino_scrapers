<form {{action "return false" this on="submit"}}>
        <aside class="side-panel">
            <header>
                <h1></h1>
            </header>
            <menu class="t-side-menu">
                <section>
                    <div class="col-md-12">
                        {{#form-group title="admin.ticket.label.location" for="location"}}
                        {{ticket-location-select ticket=model ticket_location_options=ticket_location_options search_location=search_location}}
                        {{/form-group}}
                    </div>
                    <div class="col-md-12">
                        {{#form-group title="admin.ticket.label.priority" for="priority"}}
                            {{ticket-priority-select ticket=model priorities=priorities}}
                        {{/form-group}}
                    </div>
                    <div class="col-md-12">
                        {{#form-group title="admin.ticket.label.status" for="status"}}
                            <select class="form-control t-ticket-status" onchange={{action "changed" value="target.value"}}>
                                {{#each statuses as |status|}}
                                <option value={{status.id}} selected={{is-equal model.status.id status.id}}>{{status.name}}</option>
                                {{/each}}
                            </select>
                        {{/form-group}}
                    </div>
                    <div class="col-md-12">
                        {{#form-group title="admin.ticket.label.cc" for="cc"}}
                            {{ticket-person-multi-select ticket=model search=search ticket_cc_options=ticket_cc_options}}
                        {{/form-group}}
                    </div>
                </section>
            </menu>
        </aside>
        <article class="main">
            <div class="wrapper form">
                <header>
                    {{base-component
                        model=model
                        save="save"
                        cancel="cancel"
                        delete="delete"
                    }}
                </header>

                <section class="docSection container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <section style="padding-bottom: 0">
                                <div class="row card-title">
                                    <h1 class="col-md-12">{{model.subject}} <small>{{model.number}}</small></h1>
                                </div>
                            </section>
                        </div>
                        <div class="col-md-12">
                            <section>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{#form-group title="ticket.label.subject" for="subject"}}
                                        {{input type="text" placeholder=(t "ticket.label.subject") value=model.subject class="form-control t-ticket-subject" id="ticket_subject"}}
                                        {{#validation-error-field submitted=submitted field="subject" className="validation validation-under t-subject-validation-error" model=model validation=subjectValidation}}invalid subject{{/validation-error-field}}
                                        {{/form-group}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{parent-ticket-category-select ticket=model top_level_category_options=top_level_category_options}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{input type="text" placeholder=(t "ticket.label.requester") value=model.requester.name class="form-control t-ticket-requester"}}
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </section>
            </div>
        </article>
</form>

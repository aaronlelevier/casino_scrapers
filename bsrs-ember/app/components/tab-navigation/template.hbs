<li style="width:{{tab-width tab.tab_count.length}}">
  {{#link-to tab.routeName (if link_id link_id) classNames="t-tab"}}
  <span class="t-tab-title">{{tab.parent}}</span>
  <span class="close-wrap">
    <a href="#" class="close-icon t-tab-close" {{action "close" tab bubbles=false}}>
      {{#if tab.model.isDirtyOrRelatedDirty}}
      {{fa-icon "circle" classNames="dirty"}}
      {{else if tab.singleTabModel.isDirtyOrRelatedDirty}}
      {{fa-icon "circle" classNames="dirty"}}
      {{else}}
      {{fa-icon "times-circle"}}
      {{/if}}
    </a>
  </span>
  {{/link-to}}
</li>

{{#if tab.modalIsShowing}}
{{#modal-dialog clickOutsideToClose=true}}
  <div>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title t-modal-title">{{if (is-equal tabList.action 'closeTab' 'cancel') (t 'crud.discard_changes') (t 'crud.delete.title')}}</h4>
    </div>
    <div class="modal-body t-modal-body">
      <p>{{if (is-equal tabList.action 'closeTab' 'cancel') (t 'crud.discard_changes_confirm') (t 'crud.delete.confirm' module=tab.module)}}</p>
    </div>
    <div class="modal-footer t-modal-footer">
      <button type="button" class="btn btn-default t-modal-cancel-btn" {{action "cancel_modal"}}>{{t 'crud.no'}}</button>
      {{#if (is-equal tabList.action 'closeTab' 'cancel')}}
        <button type="button" class="btn btn-primary t-modal-rollback-btn" {{action "rollback_model"}}>{{t 'crud.yes'}}</button>
      {{else if (is-equal tabList.action 'delete' 'deleteAttachment')}}
        <button type="button" class="btn btn-primary t-modal-delete-btn" {{action "delete_model"}}>{{t 'crud.delete.button'}}</button>
      {{/if}}
    </div>
  </div>
{{/modal-dialog}}
{{/if}}

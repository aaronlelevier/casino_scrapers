<header>
	<h1 class="t-location-level">{{t "admin.locationlevel" count="2"}}</h1>

	<div class="btn-group btn-group-sm pull-right center-block" style="z-index: 2">
    {{#link-to 'admin.location-levels.new' class="t-location-level-new add-btn btn btn-default"}}
      {{fa-icon "plus-circle"}} {{t 'button.add'}}
    {{/link-to}}
	</div>

</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head">
				<th></th>
				<th>{{t "admin.locationlevel.label.name"}} {{fa-icon "sort"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each model as |level|}}
				{{#link-to 'admin.location-levels.location-level' level.id tagName="tr" class="t-location-level-data"}}
					<td><input type="checkbox" /></td>
					<td class="t-location-level-name">{{t level.name}}</td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

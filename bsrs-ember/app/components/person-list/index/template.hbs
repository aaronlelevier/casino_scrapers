<header class="peopleSection">
	<h1 class="t-people">People</h1>

	<div class="btn-group btn-group-sm pull-right center-block">
		{{add-button actionValue='admin.people.new'}}
	</div>

</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head peopleHeader">
				<th></th>
				<th class="people">Name <span class="fa fa-sort"></span></th>
				<th class="people">Is Active <span class="fa fa-sort"></span></th>
				<th class="people">Title</th>
				<th class="people">Emp Number</th>
				<th class="people">Role</th>
				<th class="people">Auth Amount <span class="fa fa-sort"></span></th>
			</tr>
		</thead>
		<tbody>
			{{#each model key="id" as |person|}}
				{{#link-to 'admin.people.person' person.id tagName="tr" class="t-data"}}
					<td><input type="checkbox" /></td>
					<td class="first">{{person.first_name}} {{person.last_name}}</td>
					<td>{{person.isActive}}</td>
					<td>{{person.title}}</td>
					<td>{{person.empnumber}}</td>
					<td>{{person.role}}</td>
					<td>{{person.authamount}}</td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

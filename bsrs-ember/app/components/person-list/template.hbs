<header>
  <h1 class="t-people">{{t "admin.person" count="2"}}</h1>

  <div class="btn-group btn-group-sm pull-right center-block">
    {{#link-to 'admin.people.new' class="t-person-new add-btn btn btn-default"}}
    {{fa-icon "plus-circle"}} {{t 'button.add'}}
    {{/link-to}}
  </div>

</header>
<section class="docSection rowTable">
  {{grid-search-input placeholder="search" keyup="keyup" value=search}}
  <table class="table table-striped table-hover">
    <thead>
      <tr class="head">
        <th></th>
        <th>{{#link-to 'admin.people.index' (query-params sort="username") class="t-sort-username"}}{{t "admin.person.label.username"}}{{/link-to}}</th>
        <th>{{#link-to 'admin.people.index' (query-params sort="first_name") class="t-sort-first-name"}}{{t "admin.person.label.name"}}{{/link-to}}</th>
        <th>{{#link-to 'admin.people.index' (query-params sort="title") class="t-sort-title"}}{{t "admin.person.label.title"}}{{/link-to}}</th>
        <th>{{t "admin.person.label.role"}}</th>
				<th class="text-right">{{t "admin.person.label.employee_id"}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each paginated_content as |person|}}
      {{#link-to 'admin.people.person' person.id tagName="tr" class="t-person-data"}}
      <td><input type="checkbox" /></td>
      <td class="t-person-username">{{person.username}}</td>
      <td class="t-person-fullname">{{person.full_name}}</td>
      <td class="t-person-title">{{person.title}}</td>
      <td class="t-person-role-name">{{t person.role.name}}</td>
      <td class="text-right t-person-employee-id">{{person.employee_id}}</td>
      {{/link-to}}
      {{/each}}
      <nav>
        <ul class="pagination t-pages">
          {{#each pages as |page|}}
          {{#link-to 'admin.people.index' (query-params page=page) tagName="li"}}{{page}}{{/link-to}}
          {{/each}}
        </ul>
      </nav>
    </tbody>
  </table>
</section>

<div class="rowTable">
    <header>
      <h1 class="t-people">{{t "admin.person" count="2"}}</h1>
      <div class="control-menu pull-right">
        <form class="form-inline">
          <div class="form-group">
            {{grid-search-input placeholder=(t 'admin.person.search') keyup="keyup" value=search}}
            <div class="btn-group btn-group-sm">
              {{#link-to 'admin.people.new' class="t-person-new add-btn btn btn-default btn-sm"}}
              {{fa-icon "plus-circle"}} {{t 'button.add' model=(t 'admin.person.one')}}
              {{/link-to}}
            </div>
          </div>
        </form>
      </div>


    </header>

    {{#if toggleFilter}}
      {{#tether-dialog target=targetFilter close='toggleFilterModal' hasOverlay=false clickOutsideToClose=true attachment='top right'}}
        {{input-dynamic-filter obj=filterModel prop=filterField placeholder=filterPlaceholder}}
      {{/tether-dialog}}
    {{/if}}

    <section class="docSection docSectionWithFooter">
      <table class="table table-striped table-hover">
        <thead>
          <tr class="head">
            <th></th>
            <th><span {{action "sortBy" "username"}} class="t-sort-username-dir glyphicon {{if (query-param-asc "username" sort) "glyphicon-chevron-up" "glyphicon-chevron-down"}}"><a href="#" class="t-sort-username">{{t "admin.person.label.username"}}</a></span>
              <span class="t-filter-username glyphicon glyphicon-filter pull-right" {{action 'toggleFilterModal' 'username'}}></span>
            </th>
            <th><span {{action "sortBy" "first_name"}} class="t-sort-first-name-dir glyphicon {{if (query-param-asc "first_name" sort) "glyphicon-chevron-up" "glyphicon-chevron-down"}}"><a href="#" class="t-sort-first-name">{{t "admin.person.label.name"}}</a></span>
              <span class="t-filter-fullname glyphicon glyphicon-filter pull-right" {{action 'toggleFilterModal' 'fullname'}}></span>
            </th>
            <th><span {{action "sortBy" "title"}} class="t-sort-title-dir glyphicon {{if (query-param-asc "title" sort) "glyphicon-chevron-up" "glyphicon-chevron-down"}}"><a href="#" class="t-sort-title">{{t "admin.person.label.title"}}</a></span>
              <span class="t-filter-title glyphicon glyphicon-filter pull-right" {{action 'toggleFilterModal' 'title'}}></span>
            </th>
            <th>{{t "admin.person.label.role"}}</th>
    				<th class="text-right">{{t "admin.person.label.employee_id"}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each paginated_content as |person|}}
          {{#link-to 'admin.people.person' person.id tagName="tr" class="t-person-data"}}
          <td><input type="checkbox" /></td>
          <td class="t-person-username">{{person.username}}</td>
          <td class="t-person-fullname">{{person.fullname}}</td>
          <td class="t-person-title">{{person.title}}</td>
          <td class="t-person-role-name">{{person.role.name}}</td>
          <td class="text-right t-person-employee-id">{{person.employee_id}}</td>
          {{/link-to}}
          {{/each}}
        </tbody>
      </table>

    </section>
    <footer>
        <nav class="text-center">
          <ul class="pagination t-pages">
            <li class="t-first {{if first '' 'disabled'}}" disabled={{if first disabled ''}}>{{#link-to 'admin.people.index' (query-params page=first) disabled=notFirst}}first{{/link-to}}</li>
            <li class="t-previous {{if previous '' 'disabled'}}" disabled={{if previous disabled ''}}>{{#link-to 'admin.people.index' (query-params page=previous) disabled=notPrevious}}previous{{/link-to}}</li>
            {{#each pages as |page|}}
              <li class="t-page">
                  {{#link-to 'admin.people.index' (query-params page=page)}}{{page}}{{/link-to}}
              </li>
            {{/each}}
            <li class="t-next {{if next '' 'disabled'}}" disabled={{if next disabled ''}}>{{#link-to 'admin.people.index' (query-params page=next) disabled=notNext}}next{{/link-to}}</li>
            <li class="t-last {{if last '' 'disabled'}}" disabled={{if last disabled ''}}>{{#link-to 'admin.people.index' (query-params page=last) disabled=notLast}}last{{/link-to}}</li>
          </ul>
        </nav>
    </footer>
</div>

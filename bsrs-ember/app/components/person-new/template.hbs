<form {{action "return false" this on="submit"}}>
  {{base-component-new
    model=model
    repository=repository
    save=attrs.save
    saveBase="save"
    cancel=attrs.cancel
    delete=attrs.delete
  }}
	<section class="docSection container-fluid">
		<section>
			<h2 class="col-sm-12">{{t "admin.person.label.credentials"}}</h2>
			<div class="col-sm-6">
				{{#form-group title="admin.person.label.username" for="username"}}
					{{input type="text" value=model.username placeholder=(t "admin.person.label.username") class="form-control t-person-username" id="username"}}
					{{#validation-error-field submitted=submitted field="username" className="validation validation-under t-username-validation-error" model=model validation=usernameValidation}}{{t "validation.invalid"}} {{t "admin.person.label.username"}}{{/validation-error-field}}
				{{/form-group}}
			</div>
			<div class="col-sm-6">
				{{#form-group title="admin.person.label.password" for="password"}}
					{{input type="text" value=model.password placeholder=(t "admin.person.label.password") class="form-control t-person-password" id="password"}}
					{{#validation-error-field submitted=submitted field="password" className="validation validation-under t-password-validation-error" model=model validation=passwordValidation}}{{t "validation.invalid"}} {{t "admin.person.label.password"}}{{/validation-error-field}}
				{{/form-group}}
			</div>
			<div class="col-sm-12">
				{{#form-group title="admin.person.label.role" for="role"}}
          {{role-select model=model.role options=roles person=model}}
				{{/form-group}}
			</div>
		</section>
	</section>
</form>

{{#if showMessage}}
    {{#if (v-get model valuePath "message")}}
      {{#tether-dialog
        container-class="tether-dialog-reset"
        target=(concat "[data-validation-target=" valuePath index "]")
        hasOverlay=false
        attachment="bottom left"
        targetAttachment="top left"
        offset="5px 0"
      }}
      <div class="validated-input-error-dialog animated flipInX .error {{concat "t-validation-" valuePath}}" data-test-id={{concat "validation-" valuePath index}}>
       {{t (v-get model valuePath "message")}}
      </div>
      {{/tether-dialog}}
    {{/if}}
{{/if}}

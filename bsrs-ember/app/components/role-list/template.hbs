<header>
	<h1 class="t-roles">{{t "admin.role" count="2"}}</h1>
	<div class="btn-group btn-group-sm pull-right center-block">
    {{#link-to 'admin.roles.new' class="t-role-new add-btn btn btn-default"}}
      {{fa-icon "plus-circle"}} {{t 'button.add'}}
    {{/link-to}}
	</div>
</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head">
				<th></th>
				<th>{{t "admin.role.label.name"}} {{fa-icon "sort"}}</th>
				<th>{{t "admin.role.label.location_org"}} {{fa-icon "sort"}}</th>
				<th>{{t "admin.role.label.role_type"}} {{fa-icon "sort"}}</th>
				<th>{{t "admin.role.label.number_users"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each model as |role|}}
				{{#link-to 'admin.roles.role' role.id tagName="tr" class="t-role-data"}}
					<td><input type="checkbox" /></td>
					<td>{{role.name}}</td>
					<td>{{role.location_level.name}}</td>
					<td>{{role.role_type}}</td>
					<td></td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

<header>
	<h1 class="t-people">{{t "admin.role" count="2"}}</h1>
	<div class="btn-group btn-group-sm pull-right center-block">
		{{add-button actionValue='admin.role.new'}}
	</div>
</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head">
				<th></th>
				<th>{{t "admin.role.label.name"}} {{fa-icon "sort"}}</th>
				<th>{{t "admin.role.label.location_org"}} {{fa-icon "sort"}}</th>
				<th>{{t "admin.role.label.number_users"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each model key="id" as |role|}}
				{{#link-to 'admin.roles.role' role.id tagName="tr" class="t-data"}}
					<td><input type="checkbox" /></td>
					<td>{{role.name}}</td>
					<td>{{role.location_level}}</td>
					<td>{{role.user_count}}</td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

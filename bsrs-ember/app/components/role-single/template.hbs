<form {{action "return false" this on="submit"}}>

  {{base-component
  model=model
  save="save"
  cancel="cancel"
  delete="delete"
  }}

	<section class="docSection container-fluid">
    <div class="row">
      <div class="col-md-12">
				<section style="padding-bottom: 0">
					<div class="row card-title">
						<h1 class="col-md-12">{{model.name}}</h1>
					</div>
				</section>
			</div>
			<div class="col-md-12">
        <section>
          <div class="row">
            <div class="col-md-12">
              {{#form-group title="admin.role.label.name" for="name"}}
                  {{input type="text" placeholder=(t "admin.role.label.name") value=model.name class="form-control t-role-name" id="role_name" required="required"}}
              {{/form-group}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              {{#form-group title="admin.role.label.role_type" for="role_type"}}
                    <select class="t-role-role-type form-control role-type" onchange={{action (action "changed" model) value="target.value"}} id="role_type_select">
                      {{#each all_role_types as |role_type|}}
                      <option value={{role_type.name}} selected={{is-equal model.role_type role_type.name}}>{{role_type.name}}</option>
                      {{/each}}
                    </select>
              {{/form-group}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              {{#form-group title="admin.location.label.location_level" for="role_location_level_select"}}
                {{location-level-select model=model.location_level manyRelationshipModel=model options=all_location_levels manyRelationshipTo="roles"}}
              {{/form-group}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              {{#form-group title="admin.role.label.category" for="category"}}
                {{role-category-select role=model search=search categories_children=categories_children}}
              {{/form-group}}
            </div>
          </div>
        </section>
      </div>
    </div>
  </section>
</form>

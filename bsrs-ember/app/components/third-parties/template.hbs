<header>
	<h1 class="t-third-parties">{{t "admin.third_party" count="2"}}</h1>

  {{#link-to "admin.third-parties.new" class="t-add-new add-btn btn btn-default btn-sm"}}
  {{/link-to}}

</header>
<section class="docSection rowTable">
	<table class="table table-striped table-hover">
		<thead>
			<tr class="head">
				<th></th>
				<th>{{t "admin.third_party.label.name"}} {{fa-icon "sort"}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each model as |third_party|}}
 				{{#link-to 'admin.third-parties.third-party' third_party.id tagName="tr" class="t-grid-data"}}
					<td><input type="checkbox" /></td>
					<td>{{t third_party.name}}</td>
				{{/link-to}}
			{{/each}}
		</tbody>
	</table>
</section>

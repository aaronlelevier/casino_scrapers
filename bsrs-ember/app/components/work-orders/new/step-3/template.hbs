<div class="row">
  <div class="col-md-12">
    {{#form-group title="work_order.label.provider" readonly=true}}
      {{#image-block
        model=model
        droppedImage=model.provider.logo
        size="medium"
        readonly="true"
        icon="wrench"
        dataTestId=(concat "provider-logo" indx)
      }}
      <h1 class="title" data-test-id="provider-name">{{model.provider.name}}</h1>
      <p class="subtitle" data-test-id="provider-address1">{{model.provider.address1}}</p>
      {{/image-block}}
    {{/form-group}}
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    {{#form-group title="work_order.label.category" readonly=true}}
      <div data-test-id="category">{{model.category.name}}</div>
    {{/form-group}}
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    {{#form-group title="work_order.label.approved_amount" readonly=true}}
      <div data-test-id="approved-amount">{{format-money model.approved_amount symbol=(get (get-currency-object 
        currencyService=currency 
        currencyId=model.cost_estimate_currency 
        ) 
        'symbol')}}
      </div>
    {{/form-group}}
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    {{#form-group title="work_order.label.scheduled_date" readonly=true}}
      <div data-test-id="scheduled-date">{{moment-format model.scheduled_date "MM/DD/YYYY"}}</div>
    {{/form-group}}
  </div>
</div>

{{#if model.instructions}}
  <div class="row">
    <div class="col-md-12">
      {{#form-group title="work_order.label.instructions" readonly=true}}
        <div data-test-id="instructions">{{format-markdown model.instructions}}</div>
      {{/form-group}}
    </div>
  </div>
{{/if}}

{{#grid-view2 as |t|}}
  <header class="mobile-grid-head">
    {{t.head
      columns=columns
      sort=sort
      find=find
      model=model
      hasActiveFilterSet=hasActiveFilterSet
      grid_title=grid_title
      filtersets=filtersets
      routeName=routeName
    }}
  </header>
  <div class="mobile-grid-body">
    {{t.body
      columns=columns
      model=model
      requested=requested
      detail_url=detail_url
    }}
    {{t.footer
      model=model
      plural=plural
      list_url=list_url
      page=page
      page_size=page_size
    }}
  </div>
{{/grid-view2}}

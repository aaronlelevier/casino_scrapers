{{#each model.links as |link|}}
  <div class="row">
    <div class="col-md-12">
      <button class="t-del-link-btn btn btn-default btn-sm delete" type="button" {{action 'delete' link}}>{{fa-icon "minus"}}</button>
      {{#form-group title="admin.dtd.label.link.request" for="request"}}
        {{input type="text" placeholder=(t "admin.dtd.label.link.request") value=link.request class="form-control t-dtd-link-request"}}
      {{/form-group}}
      {{#form-group title="admin.dtd.label.link.text" for="text"}}
        {{input type="text" placeholder=(t "admin.dtd.label.link.text") value=link.text class="form-control t-dtd-link-text"}}
      {{/form-group}}
      <div class="row">
        <div class="col-md-12">
          <div class="checkbox form-group">
            <label>
              {{input type="checkbox" checked=link.action_button class="form-control t-dtd-link-action_button"}}
              <span>{{t "admin.dtd.label.link.action_button"}}</span>
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="checkbox form-group">
            <label>
              {{input type="checkbox" checked=link.is_header class="form-control t-dtd-link-is_header"}}
              <span>{{t "admin.dtd.label.link.is_header"}}</span>
            </label>
          </div>
        </div>
      </div>
      {{#form-group title="admin.dtd.label.link.priority" for="priority"}}
        <div class="ticket-action priority">
          {{power-select-foreign-key mainModel=link selected=link.priority change_method='change_priority' relatedModels=priorities relatedModelName='ticket-priority' clear=true}}
        </div>
      {{/form-group}}
      {{#form-group title="admin.dtd.label.link.status" for="status"}}
        <div class="ticket-action status">
          {{power-select-foreign-key mainModel=link selected=link.status change_method='change_status' relatedModels=statuses relatedModelName='ticket-status' clear=true}}
        </div>
      {{/form-group}}
    </div>
  </div>
{{/each}}
<button class="t-add-link-btn add-btn btn btn-default btn-sm" type="button" {{action "append"}}>
<span class="btn-label">{{fa-icon "plus"}} {{t "admin.link.add"}}</span>
</button>
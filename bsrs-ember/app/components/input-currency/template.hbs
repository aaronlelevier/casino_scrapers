<div style="clear:both;" class="input-group clearfix">
  <div class="input-group-addon t-currency-symbol">
    {{currencyObject.symbol}}
  </div>
  {{input 
    type="text" 
    placeholder=(if placeholder placeholder (t "admin.amount_and_default_value" value=placeholderAmount)) 
    value=bound_field 
    class=(concat "form-control t-amount" (if showMessage " invalid"))
    id="auth_amount" 
    disabled=editPrivilege
    focus-out="formatCurrency" 
    key-up=(action "keyedUp")
  }}
  {{#power-select
    selected=currencyObject
    options=currencyObjects
    onchange=(action "selected")
    class="input-group-btn input-group-select t-currency-code-select"
    tagName="div"
    searchEnabled=false
    as |op|
  }}
    {{op.code}}
  {{/power-select}}
</div>

{{show-validation-message 
  model=model 
  valuePath=valuePath
  showMessage=showMessage
}}

<article class="main full">
  {{component (if FlexiLayout.isMobile 'tickets/ticket-list-mobile' 'tickets/ticket-list')
    model=model
    page=page
    sort=sort
    search=search
    find=find
    id_in=id_in
    requested=requested
    page_size=page_size
    filterModel=filterModel
    gridFilterParams=gridFilterParams
    gridIdInParams=gridIdInParams
    filtersets=filtersets
    routeName=routeName
    noun="ticket"
    plural=(t "ticket.other")
    grid_title=(t "ticket" count="2")
    list_url="main.tickets.index"
    detail_url="main.tickets.index.ticket"
    add_model_url="main.tickets.index.new"
    search_placeholder=(t "ticket.search")
    add_model_text=(t "ticket.one")
    save_filterset=(action "save_filterset")
    hasActiveFilterSet=hasActiveFilterSet
    repository=repository
    exportGrid=(route-action "exportGrid" find search sort)
    updateGridFilterParams=(route-action "updateGridFilterParams" "ticket-list")
    infinityIsLoading=(if FlexiLayout.isMobile infinityIsLoading)
    isLoading=isLoading
    linkToNew=(route-action "linkToNew")
    permissions=permissions
  }}
</article>

{{outlet}}
